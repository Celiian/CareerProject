{% extends('base.html.twig') %}

{% block nav %}

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light" style="height: 10%; width: 50%; border-bottom-style: solid; border-width: 1px; border-color: #AAAAAA">
        <!-- Container wrapper -->
        <div class="container m-lg-0">
            <!-- Navbar brand -->
            <a class="navbar-brand me-2 m-0" href="{{ path('home') }}">
                <img
                        src="{{ asset('images/jobmatch-black.png') }}"
                        height="80"
                        alt="JobMatch Logo"
                        loading="lazy"
                        style="margin-top: -5px;"

                />
            </a>

            <!-- Toggle button -->
            <button
                    class="navbar-toggler"
                    type="button"
                    data-mdb-toggle="collapse"
                    data-mdb-target="#navbarButtonsExample"
                    aria-controls="navbarButtonsExample"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
            >
                <i class="fas fa-bars"></i>
            </button>

            <!-- Collapsible wrapper -->
            <div class="collapse navbar-collapse" id="navbarButtonsExample">
                <!-- Left links -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link">Welcome to JobMatch !</a>
                    </li>
                </ul>
                <!-- Left links -->

                <div class="d-flex align-items-center">
                    <a href="{{ path('login') }}">
                        <button type="button" class="btn btn-link px-3 me-2">
                            Login
                        </button>
                    </a>
                    <a href="{{ path('inscription') }}">
                        <button type="button" class="btn btn-primary me-3">
                            Sign up for free
                        </button>
                    </a>
                </div>
            </div>
            <!-- Collapsible wrapper -->
        </div>
        <!-- Container wrapper -->
    </nav>
    <!-- Navbar -->
{% endblock %}
