{% extends('base.html.twig') %}

{% block body %}
    <div>
        {{ block("nav", "./navs/navCandidate.html.twig") }}
    </div>
    <div>
        <div class="container">
            <div class="row">
                <h6 class="text-muted">Offers :</h6>
                <ul class="list-group">
                    {% for offer in offers %}
                        <li class="list-group-item d-flex justify-content-between align-items-center"
                            style="margin-top: 2%">
                            <div>
                                <h6>{{ offer.name }}</h6>
                                <p> {{ offer.description }}</p>

                                <p>Salary : {{ offer.salary }}$ / month</p>

                                <div class="d-flex">
                                    Skill requested :
                                    {% for skill in offer.skills %}
                                        <p class="btn btn-info"
                                           style="color: white; margin-left: 5%"> {{ skill.name }} </p>
                                    {% endfor %}
                                </div>
                            </div>
                            {% if offer in candidatures %}
                                <a href="{{ path('cancel_apply_offer_candidate',{candidate_id: candidate.id, offer_id: offer.id} ) }}">
                                    <button type="button"
                                            class="btn btn-danger m-0"> Cancel candidature
                                    </button>
                                </a>
                            {% endif %}
                            {% if offer not in candidatures %}
                                <a href="{{ path('apply_offer_candidate',{candidate_id: candidate.id, offer_id: offer.id} ) }}">
                                    <button type="button"
                                            class="btn btn-primary m-0"> Apply
                                    </button>
                                </a>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}