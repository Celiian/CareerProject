{% extends('base.html.twig') %}

{% block body %}
    Your jobs offers :
    <ul class="list_jobs">

        {% for job in jobs %}
            {% if (job.company.id == id) %}
                    <div class="accordion accordion-flush" id="accordionFlush{{ job.id }}">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="flush-heading{{ job.id }}">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#flush-collapse{{ job.id }}" aria-expanded="false"
                                        aria-controls="flush-collapse{{ job.id }}">
                                    {{ job.name }}
                                </button>
                            </h2>
                            <div id="flush-collapse{{ job.id }}" class="accordion-collapse collapse"
                                 aria-labelledby="flush-heading{{ job.id }}"
                                 data-bs-parent="#accordionFlush{{ job.id }}">
                                <div class="accordion-body">
                                    {{ job.description }}
                                </div>
                                <div class="accordion-body skill-box">
                                    requested skills :
                                    {% for skill in job.skills %}
                                        <p class="skill"> {{ skill.name }} </p>
                                    {% endfor %}

                                </div>
                            </div>
                        </div>
                    </div>
            {% endif %}
        {% endfor %}
    </ul>



    <a href="{{ path('connected_company',{id: id} ) }}">
        <button>Go back</button>
    </a>

    <style>
        .skill-box {
            display: flex;
        }

        .skill {
            margin: 5px;
            margin-top: 0px;
            border-style: solid;
            border-width: 1px;
            border-radius: 5px;
            width: fit-content;
        }

        .list_jobs {
            max-width: 30%;
            list-style: none;

        }

    </style>

{% endblock %}